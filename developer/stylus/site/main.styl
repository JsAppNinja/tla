  text-decoration: underline;
  color: #fff;
}

.social span{
  margin-right: 10px;
}

.form-inline .checkbox  {
  padding-top: 0!important
}
.checkbox label {
  color: #fff;
  text-decoration: underline;
}

.forgot-link {
  color: #FF7200 !important;
}

.checkbox
  margin-top: 0
  margin-bottom: 0



.slide_up_login
  .close_btn
    i
      color: #fafafa;
    &:focus
      outline none

.main-container
  background-color: #fff;
  position: relative;
  top: 150px;
  border-radius: 5px;
  box-shadow: 0px 0px 15px 1px rgba(143, 143, 143, 1);
  padding: 20px;
  margin-bottom: 200px;
  padding-bottom: 50px
@media (max-width: 768px) and (orientation:portrait) {
  .hidden-xs-portlet {
    display: none!important
  }
  .result_block {
    font-size: 77px;
  }
  .practice_question .question, .questions_list .question {
    font-size 14px
  }
  .answers_list {
    font-size 14px
  }
}
.answers_block
  .state
    span
      margin: 20px 0

.panel-body.text-center p
  padding: 0
  margin-bottom: 2px

.free-video__item
  padding: 10px

.free-video__item:nth-child(odd)
  background-color: #ffead9;

.viewVideoButton
  position: absolute;
  bottom:20px;
  right:0;
